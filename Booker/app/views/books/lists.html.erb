<h3> Books</h3>

<table>
	<thead>
		<tr>
			<th> title</th>
			<th> Body</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td> <%= book.title %></td>
			<td> <%= book.body %></td>
			<td> <%= link_to "Show", book_path(book), class: "show_#{book.id}" %></td>
			<td> <%= link_to "Edit", edit_path(book), class: "edit_#{book.id}" %></td>
			<td> <%= link_to "Destroy", destroy_path(book), method: :delete, class: "destroy_#{book.id}" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h4> New Book</h4>

<%= form_for(@book) do |f| %>
	<h4> Title</h4>
	<%= f.text_area :title, class: "book_title" %>

	<h4> Body</h4>
	<%= f.text_area :body, class: "book_body" %>

	<%= f.submit 'Create Book' %>
<% end %>